      <Label layoutX="330.0" layoutY="86.0" text="Student Info">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="tf_name" layoutX="330.0" layoutY="120.0" prefHeight="25.0" prefWidth="180.0" promptText="Name" />
      <TextField fx:id="tf_surname" layoutX="330.0" layoutY="160.0" prefHeight="25.0" prefWidth="180.0" promptText="Surname" />
      <TextField fx:id="tf_course" layoutX="330.0" layoutY="200.0" prefHeight="25.0" prefWidth="180.0" promptText="Course" />
      <TextArea fx:id="tf_info" layoutX="330.0" layoutY="240.0" prefHeight="55.0" prefWidth="180.0" promptText="Short information" />
      <Label layoutX="40.0" layoutY="86.0" prefHeight="20.0" prefWidth="100.0" text="User Account">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="40.0" layoutY="250.0" text="Do you have account?" />
    </children>
</AnchorPane>
