            <Font size="18.0" />
         </font></Button>
      <Button fx:id="btn_login" layoutX="40.0" layoutY="270.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="118.0" style="-fx-background-color: transparent;" text="Log in" textFill="#0509fc" underline="true" />
