        <Label layoutX="40.0" layoutY="26.0" text="SignUp">
            <font>
                <Font size="21.0" />
            </font>
        </Label>
        <TextField fx:id="tf_username" layoutX="40.0" layoutY="120.0" prefHeight="25.0" prefWidth="150.0" promptText="Username" />
        <Button fx:id="btn_signUp" layoutX="220.0" layoutY="325.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="160.0" text="Sign up">
